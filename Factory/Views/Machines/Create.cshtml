@{
  Layout ="_Layout";
}
@model Factory.Models.Machine
<h2>Add a New Machine</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor( model =>model.Name )
  @Html.TextBoxFor( model =>model.Name )

  @Html.LabelFor( model =>model.Make )
  @Html.TextBoxFor( model =>model.Make )

  @Html.LabelFor( model =>model.Model )
  @Html.TextBoxFor( model =>model.Model )
  
  @Html.LabelFor( model =>model.Year )
  @Html.TextBoxFor( model =>model.Year )


  <input type ="Submit" value ="Register as a Machine" />
}

<h4>@Html.ActionLink("List of All Machines","Index")</h4>